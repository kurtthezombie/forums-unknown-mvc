@model ForumsUnknown.Models.FORUM_USERS

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Go Back", "RedirectToIndex", "Home", null, htmlAttributes: new { @class = "btn btn-secondary" }) |
    @Html.ActionLink("Edit", "EditUser", null, new { @class = "btn btn-warning" }) |
    @if (Session["Username"].ToString() != "admin")
    {
        @Html.ActionLink("Delete", "DeleteUser", "User", new { id = Model.UserID }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this account?');" })
    }
</p>
