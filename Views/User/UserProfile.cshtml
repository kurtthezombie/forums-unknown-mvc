@model ForumsUnknown.Models.FORUM_USERS

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<div>
    <h2 class="display-2">@Model.UserName</h2>

    <hr />
    @if (Model.ProfilePicPath != null)
    {
        <div style="width: 150px;height:150px;overflow:hidden;">
            <img src="@Model.ProfilePicPath" alt="ProfilePicture" class="img-fluid rounded-circle border-3 border border-light" style="width: 100%; height:100%; object-fit: cover;"/>
        </div>
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Go Back", "Index", "Home", null, htmlAttributes: new { @class = "btn btn-secondary" }) |
    @Html.ActionLink("Edit", "EditUser", null, new { @class = "btn btn-warning" }) |
    @if (Session["Username"].ToString() != "admin")
    {
        @Html.ActionLink("Delete", "DeleteUser", "User", new { id = Model.UserID }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this account?');" })
    }
</p>
