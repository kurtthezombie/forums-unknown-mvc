@model ForumsUnknown.Models.FEEDBACK

@{
    ViewBag.Title = "Feedback";
}

<h5 class="display-5">Feedback</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(model => model.UserID, new { Value = Session["UserId"] })
        @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="control-label">Tell us what you think!</label>
        @*@Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10 mt-3">
            @Html.TextAreaFor(model => model.Content, htmlAttributes: new { @class = "form-control-sm bg-transparent text-white w-25 border-light rounded-0" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="@ViewBag.NotificationColor">@ViewBag.Notification</label>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-outline-light" onclick="return confirm('Submit feedback?')" />
        </div>
    </div>
</div>
}
<br />
<div>
    @Html.ActionLink("Back", "Index", null, htmlAttributes: new { @class="btn btn-outline-light" })
</div>
