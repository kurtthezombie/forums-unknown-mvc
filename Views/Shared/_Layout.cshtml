<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Brawler:wght@400;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-transparent mt-3">
        <div class="container">
            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                <img src="~/Images/fu-logo.png" alt="Logo" width="200" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav">
                @if (Session["Username"] != null)
                {
                    <li>
                        @*<div class="d-flex container">*@
                            @using (Html.BeginForm("Search", "Post", FormMethod.Post, htmlAttributes: new { @class ="d-flex container" }))
                            {
                                @Html.AntiForgeryToken();
                                <input type="text" name="searchText" class="form-control bg-dark rounded-start-1 rounded-0 text-light border-0 w-100" required/>
                                <button type="submit" class="btn btn-dark rounded-0 rounded-end-3 border-start border-0 border-secondary">Search</button>
                            }

                        @*</div>*@
                    </li>
                }
                    <li>@Html.ActionLink("HOME", "Index", "Home", new { area = "" }, new { @class = "nav-link text-light brawler-regular" })</li>


                    @if (Session["Username"] == null)
                    {
                        <li>@Html.ActionLink("ABOUT", "About", "Home", new { area = "" }, new { @class = "nav-link text-light brawler-regular" })</li>
                        <li>@Html.ActionLink("CONTACT", "Contact", "Home", new { area = "" }, new { @class = "nav-link text-light brawler-regular" })</li>
                        <li>@Html.ActionLink("REGISTER", "Register", "User", new { area = "" }, new { @class = "nav-link btn btn-dark rounded-0 mx-3 brawler-regular text-light" })</li>
                        <li>@Html.ActionLink("LOGIN", "Login", "User", new { area = "" }, new { @class = "nav-link btn btn-light rounded-0 text-dark brawler-regular" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("MY POSTS", "MyPosts", "Post", null, new { @class = "nav-link text-light brawler-regular", })</li>
                        <li><a href="@Url.Action("CreatePost", "Post")" class="btn btn-outline-light mx-2">+CREATE</a></li>
                        <li>
                            <div class="dropdown">
                                <button class="btn dropdown-toggle text-light" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Welcome, <span class="text-danger">@Session["Username"]</span>
                                </button>
                                <div class="dropdown-menu bg-transparent" aria-labelledby="dropdownMenuButton">
                                    @if (Session["Username"].ToString() == "admin")
                                    {
                                        <a class="dropdown-item text-muted" href="@Url.Action("AdminPage","Admin")">Admin</a>
                                    }
                                    <a class="dropdown-item text-primary" href="@Url.Action("UserProfile","User")">Profile</a>
                                    <a class="dropdown-item text-danger" href="@Url.Action("Logout","User")">Logout</a>
                                </div>
                            </div>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="text-white">
                <div class="d-flex justify-content-end">
                    <a href="#" class="mx-4 text-white text-decoration-none">Terms & conditions</a>
                    <a href="#" class="text-white text-decoration-none">Privacy policy</a>
                </div>
            </div>
            <p class="text-center text-white">&copy; @DateTime.Now.Year - ForumsUnknown</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
